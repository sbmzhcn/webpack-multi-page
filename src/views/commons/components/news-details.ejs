<div class="c-news-details">
  <h1 class="c-news-details__title c13 fs6"><%= $.details.title %></h1>
  <div class="c-news-details__extra c14 fs1">
    发布日期：<span class="c15"><%= $.helpers.formatTime($.details.created_at) %></span>
    阅读：<span class="c15">878次</span>
  </div>
  <div class="c-news-details__body s-cms-content"><%= $.details.content %></div>
  <div class="c-news-details__nav fs1">
    <% if ($.prev) { %>
    上一篇：<a href="/news/<%= $.prev.id %>"><%= $.prev.title %></a>
    <% } %>
    <% if ($.next) { %>
    <br>
    <a href="#">下一篇：香港环保署雷国强博士来我院作精彩报告</a>
    <% } %>
    <div class="c-news-details__nav-more">
      <a href="/news">&lt; 更多</a>
    </div>
  </div>
</div>
